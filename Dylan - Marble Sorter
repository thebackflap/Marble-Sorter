#pragma config(Sensor, in1,    lightsensor,    sensorReflection)
#pragma config(Motor,  port1,           wheelmot,    tmotorVex269, openLoop)
#pragma config(Motor,  port2,           servomotor,    tmotorServoStandard, openLoop)
